# Google Workspace MCP - Docker Environment Template
# Copy to .env and set values, or use these keys in Docker Desktop MCP Server panel.

# ---------------------------------------------------------------------------
# Required OAuth Credentials
# ---------------------------------------------------------------------------
GOOGLE_OAUTH_CLIENT_ID="your-google-client-id"
GOOGLE_OAUTH_CLIENT_SECRET="your-google-client-secret"

# ---------------------------------------------------------------------------
# Required Runtime Settings
# ---------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT="your-gcp-project-id"
GOOGLE_CLOUD_LOCATION="global"
PORT="8000"

# ---------------------------------------------------------------------------
# Security Defaults (recommended)
# ---------------------------------------------------------------------------
# Keep secure transport enforced by default.
# Set to 1 ONLY for local non-production testing when needed.
OAUTHLIB_INSECURE_TRANSPORT="0"

# Prefer OAuth 2.1 support (recommended)
MCP_ENABLE_OAUTH21="true"

# Single user mode (recommended for personal workstation use)
MCP_SINGLE_USER_MODE="1"

# Optional: default email hint for single-user auth
# USER_GOOGLE_EMAIL="you@company.com"

# ---------------------------------------------------------------------------
# Optional Tool Loading Controls
# ---------------------------------------------------------------------------
# TOOL_TIER="core"      # core | extended | complete
# TOOLS="gmail drive"   # space-separated service list

# ---------------------------------------------------------------------------
# Optional Advanced OAuth Modes
# ---------------------------------------------------------------------------
# External OAuth provider mode (requires OAuth 2.1)
# EXTERNAL_OAUTH21_PROVIDER="false"

# Stateless mode for ephemeral/container environments (requires OAuth 2.1)
# WORKSPACE_MCP_STATELESS_MODE="false"

# ---------------------------------------------------------------------------
# Optional OAuth Proxy Storage Backend (OAuth 2.1 only)
# ---------------------------------------------------------------------------
# WORKSPACE_MCP_OAUTH_PROXY_STORAGE_BACKEND="memory"  # memory | disk | valkey
# WORKSPACE_MCP_OAUTH_PROXY_DISK_DIRECTORY="/app/store_creds"

# Valkey/Redis backend options
# WORKSPACE_MCP_OAUTH_PROXY_VALKEY_HOST="localhost"
# WORKSPACE_MCP_OAUTH_PROXY_VALKEY_PORT="6379"
# WORKSPACE_MCP_OAUTH_PROXY_VALKEY_USE_TLS="false"
# WORKSPACE_MCP_OAUTH_PROXY_VALKEY_DB="0"
# WORKSPACE_MCP_OAUTH_PROXY_VALKEY_USERNAME=""
# WORKSPACE_MCP_OAUTH_PROXY_VALKEY_PASSWORD=""

# Optional stable signing key for encrypted storage portability
# FASTMCP_SERVER_AUTH_GOOGLE_JWT_SIGNING_KEY="set-a-long-random-value"

# ---------------------------------------------------------------------------
# Optional Google Custom Search
# ---------------------------------------------------------------------------
# GOOGLE_PSE_API_KEY="your-pse-api-key"
# GOOGLE_PSE_ENGINE_ID="your-pse-engine-id"
